{
  "name": "three-particle",
  "version": "0.0.3",
  "description": "A particle plugin base on three.js",
  "main": "dist/index.cjs.js",
  "jsnext:main": "dist/index.esm.js",
  "module": "dist/index.esm.js",
  "sideEffects": false,
  "srctype": "ts",
  "scripts:ts": {
    "clean": "rimraf ./dist",
    "lint": "tslint -c tslint.json src/**.ts",
    "build:cjs": "rollup -c config/rollup.config.cjs.js",
    "build:iife": "rollup -c config/rollup.config.iife.js",
    "build:esm": "rollup -c config/rollup.config.esm.js",
    "build": "npm run clean && npm run build:iife && npm run build:esm && npm run build:cjs",
    "test": "npm run lint && nyc --nycrc-path .nycrc-ts mocha",
    "coveralls": "nyc --nycrc-path .nycrc-ts report --reporter=text-lcov | coveralls",
    "release": "npn test && npm run build && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "lint": "eslint -c .eslintrc.js src/**.js",
    "lint:fix": "eslint --fix -c .eslintrc.js src/**.js",
    "serve": "node server/index.js",
    "dev": "rollup -c config/rollup.config.iife.js -w",
    "build:cjs": "rollup -c config/rollup.config.cjs.js",
    "build:iife": "rollup -c config/rollup.config.iife.js",
    "build:esm": "rollup -c config/rollup.config.esm.js",
    "build": "npm run clean && npm run build:iife && npm run build:esm && npm run build:cjs",
    "test": "npm run lint && cross-env NODE_ENV=test nyc mocha",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "release": "npn test && npm run build && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags"
  },
  "author": "GurifYuanin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/GurifYuanin/three-particle.git"
  },
  "bugs": {
    "url": "https://github.com/GurifYuanin/three-particle/issues"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "7.0.0",
    "@types/node": "^10.12.30",
    "@types/three": "^0.93.26",
    "babel-plugin-istanbul": "5.1.0",
    "cdkit": "1.1.0",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "detect-port": "^1.3.0",
    "es5-shim": "4.5.10",
    "eslint": "4.18.2",
    "expect.js": "0.3.1",
    "express": "^4.16.4",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "rimraf": "2.6.2",
    "rollup": "0.57.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^8.4.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-typescript2": "^0.19.3",
    "rollup-plugin-uglify": "1.0.0",
    "source-map-support": "0.5.9",
    "ts-node": "7.0.1",
    "tslib": "1.9.3",
    "tslint": "^5.13.1",
    "typescript": "3.1.6"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@babel/runtime": "^7.3.4",
    "@jsmini/clone": "0.3.0",
    "@jsmini/console": "0.6.0",
    "@jsmini/event": "0.5.1",
    "@jsmini/extend": "0.2.0",
    "@jsmini/guid": "0.6.0",
    "@jsmini/inherits": "0.5.0",
    "@jsmini/is": "0.4.0",
    "@jsmini/load": "0.1.0",
    "@jsmini/pubsub": "0.1.0",
    "@jsmini/querystring": "0.1.0",
    "@jsmini/type": "0.4.0",
    "@jsmini/url": "0.1.0",
    "three": "^0.99.0"
  }
}
