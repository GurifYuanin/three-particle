{
  "name": "three-particle",
  "version": "0.0.7",
  "description": "A particle plugin base on three.js",
  "main": "dist/index.cjs.js",
  "jsnext:main": "dist/index.esm.js",
  "module": "dist/index.esm.js",
  "sideEffects": false,
  "srctype": "ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "lint": "tslint -c tslint.json src/**.ts",
    "lint:fix": "eslint --fix -c .eslintrc.js src/**.js",
    "serve": "nodemon server/index.js",
    "dev": "rollup -c config/rollup.config.iife.js -w",
    "doc": "webpack --config webpack.config.js -w",
    "build:cjs": "rollup -c config/rollup.config.cjs.js",
    "build:iife": "rollup -c config/rollup.config.iife.js",
    "build:esm": "rollup -c config/rollup.config.esm.js",
    "build": "npm run lint && npm run test && npm run clean && npm run build:iife && npm run build:esm && npm run build:cjs && webpack --config webpack.config.js",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nyc --nycrc-path .nycrc-ts mocha --exit",
    "coveralls": "nyc --nycrc-path .nycrc-ts report --reporter=text-lcov | coveralls",
    "release": "npm run build && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags"
  },
  "author": "GurifYuanin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/GurifYuanin/three-particle.git"
  },
  "bugs": {
    "url": "https://github.com/GurifYuanin/three-particle/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@types/node": "^10.14.4",
    "@types/three": "^0.93.30",
    "babel-plugin-istanbul": "5.1.0",
    "cdkit": "1.1.0",
    "coveralls": "3.0.2",
    "cross-env": "5.2.0",
    "detect-port": "^1.3.0",
    "es5-shim": "4.5.10",
    "eslint": "4.18.2",
    "expect.js": "0.3.1",
    "express": "^4.16.4",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^6.1.1",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "rimraf": "2.6.2",
    "rollup": "0.57.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^8.4.1",
    "rollup-plugin-node-resolve": "^4.1.0",
    "rollup-plugin-typescript2": "^0.20.1",
    "rollup-plugin-uglify": "1.0.0",
    "source-map-support": "0.5.9",
    "ts-node": "7.0.1",
    "tslib": "1.9.3",
    "tslint": "^5.15.0",
    "typescript": "3.1.6",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "@babel/runtime": "^7.4.3",
    "@jsmini/clone": "0.3.0",
    "@jsmini/console": "0.6.0",
    "@jsmini/event": "0.5.1",
    "@jsmini/extend": "0.2.0",
    "@jsmini/guid": "0.6.0",
    "@jsmini/inherits": "0.5.0",
    "@jsmini/is": "0.4.0",
    "@jsmini/load": "0.1.0",
    "@jsmini/pubsub": "0.1.0",
    "@jsmini/querystring": "0.1.0",
    "@jsmini/type": "0.4.0",
    "@jsmini/url": "0.1.0",
    "showdown": "^1.9.0",
    "three": "^0.99.0",
    "xss": "^1.0.6"
  }
}